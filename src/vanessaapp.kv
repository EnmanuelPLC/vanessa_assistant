VanessaUIManager:
    VanessaMainUI:
    VanessaSettingsUI:
    VanessaRegisterUI:
    VanessaAboutUI:

<VanessaMainUI>
    name:'main_screen'
    id:main_ui
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 25

        FloatLayout:
            Image:
                size_hint: None, None
                width: 350
                height: 350
                pos_hint:{"center_x":.5,"top":1}
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 3
                        rectangle: self.x+11, self.y-3, self.width-22, self.height+6
                id: vanessa_img
                source: "assets/images/vanessa_image.png"

            Button:
                size_hint: None, None
                width: 50
                height: 50
                pos_hint: {'right': 1, 'top': 1}
                background_color: 1, 0, 0, 0
                on_release:
                    app.exit()
                Image:
                    size_hint: None, None
                    source: "assets/images/off_btn.png"
                    height: self.parent.height
                    width: self.parent.width
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                    on_touch_down: root.effect_off_btn('on', args)
                    on_touch_up: root.effect_off_btn('off', args)

        GridLayout:
            cols: 2
            rows: 1
            spacing: 0
            size_hint: None, 1
            width: 500
            pos_hint: {'center_x': .5, 'y': 0}

            Label:
                size_hint: None, .5
                width: 250
                pos_hint: {'x': 0, 'center_y': .5}
                id: vanessa_logo
                text: "Vanessa - "
                color: 0,0,0,1
                font_size: 50
                font_name: 'assets/fonts/KaushanScript-Regular'

            Label:
                size_hint: None, .5
                width: 250
                pos_hint: {'x': 0, 'center_y': .5}
                id: main_label
                text: ''
                color: 0,0,0,1
                font_size: 40
                font_name: 'assets/fonts/KaushanScript-Regular'

        GridLayout:
            cols: 3
            spacing: 30
            size_hint: 1, .4
            Button:
                id: settings
                text: "Ajustes"
                on_release:
                    root.manager.current = 'settings'
                    root.manager.transition.direction = 'left'

            Button:
                text: "Informaci√≥n"
                on_press:
                    root.manager.current = 'about'
                    root.manager.transition.direction = 'up'

<VanessaSettingsUI>
    id: settings
    name:'settings'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 25
        FloatLayout:
            Button:
                size_hint: None, None
                width: 65
                height: 65
                pos_hint: {'x': 0, 'top': 1}
                background_color: 1, 1, 1, 0
                on_press:
                    root.manager.current = 'main_screen'
                    root.manager.transition.direction = 'right'
                Image:
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: -180
                            origin: self.center
                    canvas.after:
                        PopMatrix
                    source: "assets/images/back_arrow.png"
                    size_hint: None, None
                    width: self.parent.width
                    height: self.parent.height
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Label:
                size_hint: None, None
                text: 'Tu nombre'
                color: 0,0,0,1
                font_size: 25
                pos_hint: {"center_x": .5, 'top': .7}

            TextInput:
                size_hint: None, None
                height: 40
                width: 250
                id: user_name_input
                multiline: False
                background_normal: ''
                pos_hint: {"center_x": .5, 'y': .5}
                font_size: .6*self.height
                on_text: root.save_user_name(user_name_input.text)
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height+.5


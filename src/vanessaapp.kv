#:import Factory kivy.factory.Factory
<VideoCfgPopup@Popup>:
    auto_dismiss: False
    title: 'ESCOGE TU REPRODUCTOR DE VIDEO FAVORITO'
    title_color: 0,0,0,1
    background: ''
    font_size: 30
    size_hint: .8, .8
    BoxLayout:
        orientation: "vertical"
        padding: 10
        FileChooserIconView:
            id: file_chooser
            filters: [app.root.screens[1].is_exe_and_not_sys_file]
            background_color: 1,1,1,1
            on_entry_added: app.root.screens[1].update_file_list_entry(args)
        GridLayout:
            cols: 2
            rows: 1
            size_hint: 1, .3
            padding: 30

            Button:
                text: 'Guardar'
                on_press: root.dismiss()
                on_release: app.root.screens[1].set_player_path(root, 'video')

